<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".view.HomeActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="1"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="680dp"
            android:orientation="vertical"
            android:scrollbars="none">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:rowCount="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_x="124dp"
                        android:layout_y="256dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/b_image1" />

                    <EditText
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="-30dp"
                        android:background="@drawable/layout_background"
                        android:hint="여행 지역을 입력해주세요."
                        android:paddingLeft="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#0080FF"
                        android:textColorHint="#032149"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="310dp"
                        android:layout_marginTop="-35dp"
                        android:layout_x="124dp"
                        android:layout_y="256dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/b_image24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-100dp"
                        android:text="안녕하세요, 하늘님 \n 여행 떠날 준비 되셨나요?"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </GridLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="인기 여행지역"

                    android:textColor="#0080FF"
                    android:textStyle="bold" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_x="0dp"
                    android:layout_y="255dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/b_image1"
                            android:layout_width="150dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/b_image4" />

                        <ImageView
                            android:id="@+id/gj_button"
                            android:layout_width="150dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/b_image5" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/b_image6" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="여행지역 전체보기"
                    android:textColor="#0080FF"
                    android:textStyle="bold" />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="4">

                    <ImageView
                        android:id="@+id/mp_button"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image19" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image18" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image17" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image16" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image15" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image14" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image13" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image12" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image11" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image10" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image9" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/b_image8" />

                </GridLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                </View>
            </GridLayout>


        </ScrollView>

    </GridLayout>

    <include
        layout="@layout/navigation_bar"
        tools:layout_editor_absoluteY="680dp">

    </include>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>