<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MpSpecialties">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="680dp"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="vertical"
                android:scrollbars="none">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:columnCount="1"
                        android:orientation="horizontal"
                        android:rowCount="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_x="124dp"
                            android:layout_y="256dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mp_title" />


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="280dp"
                            android:layout_marginTop="-130dp"
                            android:layout_x="124dp"
                            android:layout_y="256dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/c_image8" />

                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="-30dp"
                        android:background="@drawable/layou_backgrounts"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/b_image1"
                            android:layout_width="336dp"
                            android:layout_height="41dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/mp_spe_text" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_x="0dp"
                        android:layout_y="255dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="80dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/mp_spe1" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/mp_spe2" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/mp_spe3" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/mp_spe4" />


                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="336dp"
                            android:layout_height="41dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/mp_fest_text" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            android:rowCount="2">

                            <ImageView
                                android:layout_width="156dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/mp_fest1" />

                            <ImageView
                                android:layout_width="156dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/mp_fest2" />

                            <ImageView
                                android:layout_width="156dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/mp_fest3" />

                            <ImageView

                                android:layout_width="156dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/mp_fest4" />


                        </GridLayout>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    </View>
                </GridLayout>
            </ScrollView>

        </GridLayout>

    </FrameLayout>

    <include
        layout="@layout/navigation_bar"
        tools:layout_editor_absoluteY="680dp">

    </include>

    <ImageView
        android:id="@+id/co"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/c_image13"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>